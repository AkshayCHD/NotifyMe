<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.notifythem.NotiMaker">

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.notifythem.SelectorFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:layout="@layout/fragment_selector" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter Title of the Notification"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:hint="Enter Body Of the Notification"

        android:inputType="textPersonName" />

    <Button
        android:id="@+id/NotifiAdded"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_margin="20dp"
        android:onClick="NotifiAddedClicked"
        android:text="Next" />
</LinearLayout>
